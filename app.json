{
  "expo": {
    "name": "JEG Corp. Employee App",
    "slug": "jeg-employee-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/jeg_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan QR codes for attendance",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.jasdevph.jegemployeeapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0284c7"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.jasdevph.jegemployeeapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow JEG Employee App to access camera for QR scanning"
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "b0ac6e6a-d16a-41f2-a3bc-a87921d83a69"
      }
    }
  }
}
